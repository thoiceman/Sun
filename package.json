{
  "name": "sun-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Sun React 组件库 Monorepo",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=storybook-app",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "release": "standard-version",
    "size": "size-limit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@size-limit/preset-big-lib": "^11.2.0",
    "@storybook/react-vite": "^8.6.14",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "browserslist": "^4.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "size-limit": "^10.0.0",
    "standard-version": "^9.5.0",
    "storybook": "^8.6.14",
    "turbo": "^1.13.3",
    "typescript": "^5.4.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not dead"
  ]
}